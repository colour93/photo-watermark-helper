# Server settings
SERVER_HOST=127.0.0.1
SERVER_PORT=9393

# Security
API_TOKEN=your_secret_api_token_here

# 输入输出目录配置
WATERMARK_INPUT_DIR=./examples/input
WATERMARK_OUTPUT_DIR=./output

# 字体配置
WATERMARK_TIME_FONT_PATH=fonts/TickingTimebombBB.ttf
WATERMARK_LOCATION_FONT_PATH=fonts/unifont-16.0.04.otf

# 字体大小比例（相对于图片最短边）
WATERMARK_TIME_FONT_SIZE_RATIO=0.04
WATERMARK_LOCATION_FONT_SIZE_RATIO=0.03

# 布局配置
WATERMARK_MARGIN_RATIO=0.02    # 外边距
WATERMARK_PADDING_RATIO=0.01   # 内边距
WATERMARK_LINE_SPACING=1.5     # 行间距倍数
WATERMARK_BLUR_RADIUS=10       # 背景模糊半径

# 支持的图片格式
WATERMARK_IMAGE_EXTS=.jpg,.jpeg,.png

# JPEG压缩参数
WATERMARK_DEFAULT_JPEG_QUALITY=95       # 1-100，越大质量越好
WATERMARK_DEFAULT_JPEG_SUBSAMPLING=0    # 0=4:4:4, 2=4:2:0

# 高德地图API配置
WATERMARK_AMAP_API_KEY=your_api_key_here

# Debug mode
DEBUG=False